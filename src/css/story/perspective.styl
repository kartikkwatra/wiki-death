#perspective
	.scroll__graphic
		// background rgba(yellow, 0.5)
		position sticky
		top 0
		padding 1rem
		transform translate3d(0,0,0)

	.graphic__chart
		max-width 80rem
		margin 0 auto
		// background rgba(green, 0.5)

	.scroll__text
		pointer-events none
		position relative
		// background rgba(red, 0.5)

	.step
		max-width 25rem
		margin 0 auto
		min-height 20rem
		p
			margin 0
			padding 1rem
			background-color rgba($white, 1)
			box-shadow 0 0 1px 1px rgba($black, 0.33)


	.graphic__chart svg
		.person
			path
				fill none
				stroke $off-black
				stroke-width 3px
			
			circle
				// display none
				fill none
				stroke $off-black
				stroke-width 1px

		.axis--x
			.tick line
				display none
			path
				display none
			// .tick:last-of-type
			// 	display none

		.axis--y
			.tick:first-of-type
				display none
			.tick line
				stroke-opacity 0.5
				stroke $gray
				stroke-width 1px
				stroke-dasharray 4px 4px
			path
				display none 

		.is-transparent
			opacity 0