#perspective
	.scroll__graphic
		// background rgba(yellow, 0.5)
		position sticky
		top 0
		padding 1rem
		transform translate3d(0,0,0)

	.graphic__chart
		max-width 80rem
		margin 0 auto
		// background rgba(green, 0.5)

	.scroll__text
		pointer-events none
		position relative
		// background rgba(red, 0.5)

	.step
		max-width $column-width
		margin 0 auto
		padding-bottom 320px
		p
			margin 0
			padding 1rem
			background-color rgba($off-white, 1)
			box-shadow 0 0 10px 2px rgba($gray, 0.33)


	.graphic__chart svg
		.axis--x
			.tick line
				display none
			path
				display none
			// .tick:last-of-type
			// 	display none

		.axis--y
			.tick:first-of-type
				display none
			.tick line
				stroke-opacity 0.5
				stroke $gray
				stroke-width 1px
				stroke-dasharray 4px 4px
			path
				display none 


		.person
			path
				fill none
				stroke $gray
				stroke-width 3px
				transition stroke 250ms ease-in-out
				&.is-transparent
					opacity 0
			
			circle
				stroke $gray
				fill $bg
				stroke-width 2px

				&.is-transparent
					opacity 0
		
			&.is-transparent
				opacity 0
		
			&.is-highlight
				path
					stroke $primary
				circle
					stroke $primary
