#perspective
	figure
		position sticky
		top 0
		padding 1rem
		transform translate3d(0,0,0)
		display flex
		align-items center
		width 100%

	.figure__chart
		position relative
		width 100%
		max-width 80rem
		margin 0 auto
		&.is-hover
			cursor pointer

	figcaption
		max-width $column-width

	article
		position relative
		&.is-disabled
			pointer-events none

	.step-hover
		height 4rem
		pointer-events none

	.step
		max-width $column-width
		margin 0 auto
		padding-bottom 320px
		p
			margin 0
			padding 1rem
			background-color rgba($bg, 1)
			box-shadow 0 0 10px 2px rgba($fg, 0.25)
			font-weight 300


	figure svg
		min-height 320px
		.axis--x
			.tick line
				display none
			path
				display none
			// .tick:last-of-type
			// 	display none

		.axis--y
			.tick:first-of-type
				display none
			.tick line
				stroke-opacity 0.5
				stroke $gs-medium
				stroke-width 1px
				stroke-dasharray 4px 4px
			path
				display none 


		.person
			&.is-active
				circle
					fill $primary
			&.is-faded
				circle
					fill $gs-light
				&.is-active
					circle
						fill $primary
			path
				fill none
				stroke $gs-medium
				stroke-width 2px
				transition stroke 250ms ease-in-out
				&.is-transparent
					opacity 0
			
			circle
				stroke $bg
				fill $gs-dark

				&.is-transparent
					opacity 0
		
			&.is-transparent
				opacity 0
		
			&.is-highlight
				path
					stroke $primary
				circle
					fill $primary

			text
				set-type-size(x-small)
				font-weight 500
				letter-spacing 0.04em
				&.bg
					fill none
					stroke-width 4px
					stroke $bg
				&.fg
					fill $secondary


		.g-voronoi path
				fill-opacity 0

	.figure__footer
		display flex
		justify-content space-between
	
	.legend
		margin 0
		color $gs-dark
		font-weight 500
		opacity 0
		transition opacity 250ms ease-in-out
		&.is-visible
			opacity 1

		span
			display inline-block
			width 1em
			height 1em
			background transparent
			border-radius 50%
			border 1px solid $gs-dark
