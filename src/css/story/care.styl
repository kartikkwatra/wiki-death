#care
	figure.figure--video
		display none
		video
			max-width 33rem
			margin 0 auto
			border-radius 8px

		figcaption
			max-width $column-width * 3
			margin 0.25em auto
			text-align center
			color $gray-dark
			font-size 82px

	figure.figure--chart
		max-width 67rem
		margin 0 auto
		position relative

		figcaption
			max-width $column-width

		.figure__list
			position relative
			padding-left 1rem
		
		.people
			display flex
			flex-wrap wrap
			// flex 0 1 auto

		.person
			width 8rem
			padding 0.25em
			set-type-size(x-small, false)
			font-weight 400
			cursor pointer
			&.is-faded
				a
					color $gs-light

			a
				border none
		
		.week
			display flex
			align-items center
			margin-bottom 0.5rem
			padding-bottom 0.5rem
			border-bottom 1px solid $gs-light
		
		p.label
			set-type-size(small, false)
			font-family $mono
			line-height 1
			margin 0
			min-width 2.5rem
			text-align right
			padding-right 0.5em
			color $primary
			font-weight 600
			cursor pointer

	.figure__label
		margin 0
		position absolute
		top 50%
		left 0
		font-family $mono
		transform rotate(-90deg) translate(-33%, 0)
		transform-origin 0 50%

	.figure__filter
		display flex
		justify-content center
		margin-bottom 1.5rem
	
	select
		display block
		margin 0 0.5rem 
		width 8rem
		background $white
		border-color $gs-medium
		set-type-size(x-small, false)

	