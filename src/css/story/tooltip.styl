.tooltip
	position absolute
	top 0
	left 0
	z-index set-index(overlay)
	background rgba($bg, 0.9)
	width 20rem
	box-shadow 0 0 10px 2px rgba($fg, 0.25)
	padding 1rem
	pointer-events none
	visibility hidden
	transition top 250ms ease-in-out, left 250ms ease-in-out
	transform translate(-50%, -115%)
	&.is-center
		transform translate(-50%, -115%)
		&.is-bottom
			transform translate(-50%, 15%)
	&.is-left
		transform translate(0%, -115%)
		&.is-bottom
			transform translate(0%, 15%)
	&.is-right
		transform translate(-100%, -115%)
		&.is-bottom
			transform translate(-100%, 15%)
	&.is-visible
		visibility visible
	p
		set-type-size(small)
		font-family $sans
		margin 0
	
	.display
		display flex
		justify-content space-between
		margin-bottom 0.5rem
	.name
		font-weight 600
	.thumbnail
		width 4rem
		height 4rem
		display inline-block
		float left
		margin-right 0.75em
		background-size cover
		background-position center 0
		background-repeat no-repeat
		background-color $gray-dark
		border 1px solid $gray-dark
		border-radius 2px


	&--hidden
		opacity 0
		pointer-events none
		transform translate(-50%, -115%)
		background red
		transition none