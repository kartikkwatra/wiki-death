#change
	figure
		max-width 34rem
		max-width 45rem
		min-height 320px
		margin 0 auto
		position relative
		&.is-truncated
			max-height 36rem
			overflow hidden

	table
		width 100%
		set-type-size(x-small, false)
		margin 0 auto
		table-layout fixed
		position relative

	th,td
		width 25%
		vertical-align bottom
		&:first-child
			min-width 20rem
			width 20rem
	thead
		th
			text-transform uppercase
			letter-spacing 0.05em
			padding 0.25em 0.5em
			set-type-size(xxx-small, false)
			font-weight 600
		.number
			text-align right
	tbody
		tr
			border-bottom 1px solid $gs-light
			&:hover
				.name a
					color $secondary
			&.is-faded
				opacity 0.33
		td
			padding 0.5em
			color lighten($fg, 10)
			&:first-child
				font-weight 500
				color $gs-darkest
			&:nth-child(4)
				font-weight 600
				color #1a1a1a

		.number
			font-family $mono
			text-align right

		.name
			a
				border none
				color $gs-darkest
				letter-spacing 0.04em
			span
				set-type-size(xx-small)
				font-weight 300
				margin-left 0.5em

	.toggle-table
		text-align center
		margin-top 1rem
		.btn
			background-color transparent
			color $fg
			border 1px solid $fg
			padding 0.25em 0.5em
			width 7rem
			text-transform uppercase
			font-weight 600
			transition background-color 250ms
			&:hover
				background-color rgba($primary, 0.2)

	
	.show-more
		position absolute
		width 100%
		height 5rem
		background linear-gradient(rgba($bg, 0), $bg)
		bottom 0
		visibility hidden
		pointer-events none
		&.is-visible
			visibility visible