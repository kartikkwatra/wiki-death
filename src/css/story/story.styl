/* CUSTOM STORY STYLE */

body
	overflow-x hidden
main, main p
	set-type-size(root, false)
	+mq('bp-3')
		font-size 21px

.section__hed
	max-width $column-width
	margin 0 auto

svg text
	font-family $sans
	font-size 12px

.axis text
	text-transform uppercase
	font-weight 500
	fill $gray
	font-size 11px

section
	padding 3rem 1rem 0 1rem

.prose
	margin 3rem auto

.method
	padding 1rem
	margin 0 auto
	background-color $gray-dark

.g-annotation
	transition opacity 250ms ease-in-out
	pointer-events none
	.annotation-note-title
		fill $gray-light
		font-weight 500
		font-size 13px

	.connector
		stroke $gray-light