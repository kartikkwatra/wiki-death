/* CUSTOM STORY STYLE */

body
	overflow-x hidden
main, main p
	set-type-size(root, false)
	+mq('bp-3')
		font-size 21px

.section__hed
	max-width $column-width
	margin 0 auto

svg text
	font-family $sans
	font-size 12px

.axis text
	text-transform uppercase
	font-weight 500
	fill $gs-dark
	font-size 11px
	font-family $mono

section
	padding 3rem 1rem 0 1rem

.prose
	margin 3rem auto

.method
	padding 1rem
	margin 0 auto
	background-color $gs-light

.g-annotation
	transition opacity 250ms ease-in-out
	pointer-events none

	.annotation-note-title
		fill $gs-dark
		font-weight 500
		font-size 13px

	.connector, .note-line
		stroke $gs-dark

.is-mobile
	.person a, .name a
		pointer-events none