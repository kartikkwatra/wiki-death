#impact
	figure
		max-width 60rem
		margin 0 auto
	figcaption
		max-width $column-width
	.figure__chart
		position relative

	.person
		path.after--area
			stroke none
			fill $gs-dark
		path.after--line
			fill none
			stroke $primary
			stroke-width 1.5px
		text
			fill $fg
			set-type-size(x-small, false)
			font-weight 400
		&:nth-child(even)
				path.after--area
					fill $gs-medium

		&.is-faded
			path.after--area
				fill $gs-light
			path.after--line
				stroke lighten($primary, 30)
			text
				opacity 0.35

		&.is-active
			path.after--line
				stroke $primary
			
			path.after--area
				fill $gs-dark
				
			text
				opacity 1
			
			&:nth-child(even)
					path.after--area
						fill $gs-medium

	svg:not(.is-faded)
		.person.is-inactive
			path.after--area
				fill $gs-light
			path.after--line
				stroke lighten($primary, 30)
			text
				opacity 0.35


	.interaction
		fill-opacity 0

	figure svg
		.g-axis
			// .tick:first-of-type
			// 	display none
			.tick line
				stroke-opacity 0.5
				stroke $gs-medium
				stroke-width 1px
				stroke-dasharray 4px 4px
			path
				display none 