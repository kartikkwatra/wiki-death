#impact
	figure
		max-width 60rem
		margin 0 auto
	figcaption
		max-width $column-width
	.figure__chart
		position relative

	.person
		path.after--area
			stroke none
			fill $gs-dark
		path.after--line
			fill none
			stroke $primary
			stroke-width 1.5px
		.name
			fill $gs-darkest
			set-type-size(x-small, false)
			font-weight 600
			letter-spacing 0.03em
		&:nth-child(even)
				path.after--area
					fill $gs-medium

		&.is-faded
			.name
				fill $gs-light

		&.is-active
			path.after--line
				stroke $primary
			
			path.after--area
				fill $gs-dark
				
			.name
				fill $secondary
			
			&:nth-child(even)
					path.after--area
						fill $gs-medium
		
		&.is-inactive
			path.after--area
				fill $gs-light
			path.after--line
				stroke lighten($primary, 30)
			// text
			// 	opacity 0.35

		.tip
			set-type-size(xx-small, false)
			font-family $mono
			font-weight 400
			&--bg
				fill none
				stroke-width 3px
				stroke $bg
			&--fg
				stroke $secondary

	.interaction
		fill-opacity 0


	figure svg
		cursor pointer
		.g-axis
			// .tick:first-of-type
			// 	display none
			.tick line
				stroke-opacity 0.5
				stroke $gs-medium
				stroke-width 1px
				stroke-dasharray 4px 4px
			path
				display none 

	.legend
		width (842 / 2)px
		margin 0 auto
		margin-bottom 2rem

	
	.g-annotation
		.annotation.float
			.connector
				display none
		.annotation-note-bg
			fill $off-white
			fill-opacity 0.9
			stroke $secondary

		.annotation-note-content text
			fill darken($secondary, 5)
			font-weight 500

		.connector
			stroke $secondary